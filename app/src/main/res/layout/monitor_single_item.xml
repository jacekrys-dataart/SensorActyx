<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="data"
            type="String" />

    </data>

    <LinearLayout
        android:id="@+id/ll_monitor_item_layout"
        android:layout_margin="@dimen/monitor_item_layout_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_monitor_item_data"
            android:ellipsize="none"
            android:text="@{data}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

</layout>